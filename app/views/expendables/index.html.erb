<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      ex-panda
    </h2>
  </div>
  <%# /画面上部の帯部分  %>

  <div class="purchase-box">
    <%= link_to(wants_path, class: 'purchase-btn') do %>
      <span class='purchase-btn-text'>すぐ必要なものを登録する</span>
    <% end %>

    <%= link_to(favorites_path, class: 'purchase-btn') do %>
      <span class='purchase-btn-text'>お気に入り登録する</span>
    <% end %>

    <%= link_to(new_expendable_path, class: 'purchase-btn') do %>
      <span class='purchase-btn-text'>消耗品を登録する</span>
    <% end %>
  </div>

  
  <div class='item-contents'>
    <h2 class='title'>すぐ必要な物一覧</h2>
    <%= link_to 'すぐ必要な物', "#", class: "subtitle" %>
    <ul class='item-lists'>
    <% if @want.present? %>
      <% @want.each do |want| %>

      <li class='list'>
        <%= link_to want_path(want.id), method: :get do %>
        <div class='item-img-content'>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= want.name %>
            </h3>
          </div>
          <% if want.image.present? %>
          <%= image_tag want.image, class: "item-img" %>
          <% else%>
          <%= image_tag "img_29702.jpeg", class: "item-img" %>
          <% end %>
        </div>
        <% end %>
      </li>
       <% end %>

      <% else %>

        <li class='list'>
          <%= link_to '#' do %>
            <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
               <div class='item-info'>
                    <h3 class='item-name'>
                        商品を登録してね!
                    </h3>          
                </div>
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>

    <div class='item-contents'>
    <h2 class='title'>お気に入り一覧</h2>
    <%= link_to 'お気に入り', "#", class: "subtitle" %>
    <ul class='item-lists'>
    <% if @favorite.present? %>
      <% @favorite.each do |favorite| %>

      <li class='list'>
        <%= link_to favorite_path(favorite["id"]), method: :get do %>
        <div class='item-img-content'>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= favorite["name"] %>
          </h3>
          </div>
            <%= image_tag favorite["image"], class: "item-img" %>
          <%= render partial: "favorite_day", locals: { favorite: favorite } %>
        </div>
        <% end %>
        <div class="sell-btn-contents">
        <%= link_to "更新する", "/favorites/#{favorite["id"]}/day_update", method: :put, class:"index_item-red-btn" %>
        </div>
      </li>
       <% end %>

      <% else %>

        <li class='list'>
          <%= link_to '#' do %>
            <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
               <div class='item-info'>
                    <h3 class='item-name'>
                        商品を登録してね!
                    </h3>          
                </div>
            <% end %>
        </li>
    
      <% end %>

    </ul>
  </div>

      <div class='item-contents'>
    <h2 class='title'>消耗品一覧</h2>
    <%= link_to '消耗品', "#", class: "subtitle" %>
    <ul class='item-lists'>
    <% if @expendable.present? %>
      <% @expendable.each do |expendable| %>

      <li class='list'>
        <%= link_to expendable_path(expendable["id"]), method: :get do %>
        <div class='item-img-content'>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= expendable["name"] %>
            </h3>
          </div>
          <% if expendable["image"].present? %>
            <%= image_tag expendable["image"], class: "item-img" %>
              <%= render partial: "expendable_day", locals: { expendable: expendable } %>
            <% else%>
            <%= image_tag "img_29702.jpeg", class: "item-img" %>
            <% end %>
        </div>
        <% end %>
        <div class="sell-btn-contents">
          <%= link_to "更新する", "/expendables/#{expendable["id"]}/day_update", method: :put, class:"index_item-red-btn" %>
        </div>
      </li>
       <% end %>

      <% else %>

        <li class='list'>
          <%= link_to '#' do %>
            <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
               <div class='item-info'>
                    <h3 class='item-name'>
                        商品を登録してね!
                    </h3>          
                </div>
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
